---
import FacebookIcon from "./Icons/facebookIcon.astro";
import LinkedinIcon from "./Icons/linkedinIcon.astro";
import GoogleIcon from "./Icons/googleIcon.astro";
import GithubIcon from "./Icons/githubIcon.astro";
import InstagramIcon from "./Icons/instagramIcon.astro";

const sites = [
  {
    name: 'facebook',
    link: 'https://www.facebook.com/frankdavid.guilombobonilla',
    color: '#3B5998',
    icon: FacebookIcon
  },
  {
    name: 'linkedin',
    link: 'https://www.linkedin.com/in/frank-guilombo-028966205/',
    color: '#0A66C2',
    icon: LinkedinIcon
  },
  {
    name: 'google',
    link: 'mailto:guilombofrank07@gmail.com',
    color: '#DC4A38',
    icon: GoogleIcon
  },
  {
    name: 'github',
    link: 'https://github.com/Frank-G276',
    color: '#000',
    icon: GithubIcon
  },
  {
    name: 'instagram',
    link: 'https://www.instagram.com/frank_guilombo/',
    color: '#E4405F',  
    gradient: 'radial-gradient(circle at 30% 107%, #fdf497 0%, #fdf497 5%, #fd5949 45%, #d6249f 60%, #285AEB 90%)', 
    icon: InstagramIcon
  }
];
---

<div class="flex justify-start h-fit gap-4">
  {sites.map((site) => (
    <a 
      target="_blank"
      href={site.link || '#'} 
      class={`btn ${site.name} w-14 h-8 rounded-full hover:scale-110`} 
      style={`--btn-color: ${site.color}; --btn-gradient: ${site.gradient || site.color}`} 
    >
      <div class="size-8 mx-auto my-auto">
        <site.icon class="size-8" />
      </div>
    </a>
  ))}
</div>

<style>
  .btn {
    display: inline-block;
    background-color: #fff;
    text-align: center;
    position: relative;
    overflow: hidden;
    box-shadow: 0 5px 15px -5px rgba(0, 0, 0, 0.1);
    opacity: 0.99;
    transition: all 0.35s cubic-bezier(0.31, -0.105, 0.43, 1.59);
  }

  .btn::before {
    content: '';
    width: 120%;
    height: 120%;
    position: absolute;
    top: 90%;
    left: -110%;
    background: var(--btn-gradient);
    transform: rotate(45deg);
    transition: all 0.35s cubic-bezier(0.31, -0.105, 0.43, 1.59);
  }

  .btn svg {
    position: relative;
    z-index: 1;
    transform: scale(0.8);
    transition: all 0.35s cubic-bezier(0.31, -0.105, 0.43, 1.59);
    color: var(--btn-color);
  }

  .btn:hover::before {
    top: -10%;
    left: -10%;
  }

  .btn:hover svg {
    color: white;
  }
</style>