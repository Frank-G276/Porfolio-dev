---
import type { ComponentProps } from 'astro/types';
import Control_prendario from '../components/Modals/Control_prendario.astro'
import Portfolio from './Modals/Portfolio.astro';

type TagStylesKeys = 'Angular' | 'TypeScript' | 'Spring' | 'SQL';

const tagStyles: Record<TagStylesKeys, string> = {
  'Angular': 'bg-red-950 text-red-400 dark:bg-red-950/50 dark:text-red-400 border-red-800',
  'TypeScript': 'bg-blue-950 text-blue-400 dark:bg-blue-950/50 dark:text-blue-400 border-blue-800',
  'Spring': 'bg-green-950 text-green-400 dark:bg-green-950/50 dark:text-green-400 border-green-800',
  'SQL': 'bg-purple-950 text-purple-400 dark:bg-purple-950/50 dark:text-purple-400 border-purple-800',
};

interface Project {
  modal: any; 
  title: string;
  description: string;
  tags: TagStylesKeys[]; // <- Corrección clave: tags es un array de TagStylesKeys
  demo: string;
  source: string;
  image: string;
}

const projects = [
  {
    modal: Portfolio,
    title: 'Control prendario: Gestión Digital para Almacén El Pistón',
    description: 'Plataforma web para optimizar préstamos prendarios: gestión de clientes, pagos y reportes legales.',
    tags: ['Angular', 'TypeScript', 'Spring', 'SQL'],
    demo: '#',
    source: 'https://github.com/Frank-G276/Control-Prendario',
    image: 'https://images.unsplash.com/photo-1551650975-87deedd944c3',
  }
  
]
---

<section id="works" class=" min-w-screen pt-16 min-h-screen border-b border-zinc-300 dark:border-zinc-800">
    <div class="container mx-auto pt-3">
        <h2 class="text-4xl font-semibold text-center mb-12">Trabajos</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {projects.map((project) => (
                <div class="bg-white hover:bg-gray-50 border-gray-200 dark:bg-black/10 dark:hover:bg-gray-950 dark:border-gray-800 rounded-lg overflow-hidden
                 shadow-sm dark:shadow-white/10 hover:shadow-lg dark:hover:shadow-white/10  transition-all group m-4"> 
                    <img src={project.image} alt={project.title} class="w-full h-48 object-cover">
                    <div class="p-6 size-auto m-auto">
                        <h3 class=" font-bold text-xl mb-2">{project.title}</h3>
                        <p class="text-gray-600 dark:text-gray-400 mb-4">{project.description}</p>
                        <div class="flex gap-2 mb-4 flex-wrap">
                            {project.tags.map((tag) => ( 
                                <span class={`px-3 py-1 rounded-full text-sm transition-all border ${tagStyles[tag as TagStylesKeys] || 'bg-gray-100'}`}>
                                {tag}
                                </span>
                            ))}
                        </div>
                        <div class="flex flex-wrap gap-4 h-auto m-auto">
                            <a href={project.demo} class="text-cyan-600 hover:underline hover:text-cyan-700 dark:text-cyan-400 dark:hover:text-cyan-300" target="_blank">Demo en Vivo</a>
                            <a href={project.source} class="text-gray-600 hover:underline hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300" target="_blank">Código Fuente</a>
                            <project.modal/>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>